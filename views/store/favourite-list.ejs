<%- include('../partials/head.ejs') %>
</head>

<body class="airbnb-body bg-gray-50">
    <%- include('../partials/nav.ejs') %>
    <main class="max-w-6xl mx-auto px-4 py-8">
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-gray-800 mb-2">My Favorites</h1>
            <p class="text-gray-600">Your saved homes and experiences</p>
        </div>

        <% if (registeredHomes.length === 0) { %>
            <div class="bg-white rounded-lg shadow-md p-8 text-center">
                <div class="text-red-500 text-5xl mb-4">â™¥</div>
                <h2 class="text-2xl font-semibold mb-4">No favorites yet</h2>
                <p class="text-gray-600 mb-6">Start saving places you're interested in by clicking the "Add to Favorites" button on any listing.</p>
                <a href="/homes" class="inline-block bg-red-500 hover:bg-red-600 text-white font-medium py-3 px-6 rounded-lg transition-colors duration-200">
                    Explore homes
                </a>
            </div>
        <% } else { %>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <% registeredHomes.forEach(home => { %>
                    <div class="bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow duration-200 overflow-hidden">
                        <a href="/homes/<%= home.id %>" class="block">
                            <img src="https://source.unsplash.com/random/400x300/?apartment" alt="<%= home.title %>" class="w-full h-48 object-cover">
                            <div class="p-4">
                                <h2 class="text-lg font-semibold text-gray-800 mb-1"><%= home.title %></h2>
                                <p class="text-gray-500 text-sm mb-2"><%= home.location %></p>
                                <p class="text-gray-600 text-sm mb-3 line-clamp-2"><%= home.description %></p>
                                <div class="flex justify-between items-center mt-4">
                                    <div class="font-semibold">$<%= home.price %> <span class="text-sm font-normal text-gray-500">night</span></div>
                                    <form action="/favourites/remove" method="POST">
                                        <input type="hidden" name="homeId" value="<%= home.id %>">
                                        <button type="submit" class="text-red-500 hover:text-red-700">
                                            Remove
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </a>
                    </div>
                <% }) %>
            </div>
        <% } %>
    </main>
</body>
</html>