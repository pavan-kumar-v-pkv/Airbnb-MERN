<%- include('../partials/head.ejs') %>
    </head>

    <body class="airbnb-body">
        <%- include('../partials/nav.ejs') %>
            <main class="airbnb-main">
                <h2 class="airbnb-title">Welcome to Airbnb Index page</h2>
                <p class="text-gray-600 mb-8">Your one-stop solution for all your lodging needs.</p>
                <a href="/host/add-home"
                    class="bg-red-500 hover:bg-red-600 text-white font-bold py-3 px-6 rounded-lg transition-colors duration-300 mb-8">Add
                    Home</a>
                <div class="mt-12">
                    <h3 class="airbnb-title mb-6 mt-8">Here are the list of registered homes:</h3>
                    <ul class="space-y-3">
                        <% registeredHomes.forEach(home => { %>
                            <li
                                class="bg-white border border-gray-200 rounded-lg p-4 shadow-sm hover:shadow-md transition-shadow duration-300">
                                <div class="flex justify-between items-start">
                                    <div class="flex-grow">
                                        <div class="text-gray-800 font-medium mb-2">
                                            <%= home.title %>
                                        </div>
                                        <div class="text-gray-600 text-sm mb-3">
                                            <%= home.description %>
                                        </div>
                                    </div>
                                    <button class="bg-blue-500 hover:bg-blue-600 text-white font-medium py-2 px-4 rounded-lg transition-colors duration-300 ml-4 flex-shrink-0">
                                        Book Now
                                    </button>
                                </div>
                            </li>
                        <% }) %>
                    </ul>
                </div>
            </main>
    </body>

    </html>