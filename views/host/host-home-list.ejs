<%- include('../partials/head.ejs') %>
    </head>

    <body class="airbnb-body">
        <%- include('../partials/nav.ejs') %>
            <main class="airbnb-main">
                <h2 class="airbnb-title">Welcome to Airbnb</h2>
                <p class="text-gray-600 mb-8">Your one-stop solution for all your lodging needs.</p>
                <a href="/host/add-home"
                    class="bg-red-500 hover:bg-red-600 text-white font-bold py-3 px-6 rounded-lg transition-colors duration-300 mb-8">Add
                    Home</a>
                <div class="mt-12">
                    <h3 class="airbnb-title mb-6 mt-8">Hey host, Here are the list of registered homes:</h3>
                    <ul class="space-y-3">
                        <% registeredHomes.forEach(home => { %>
                            <li
                                class="bg-white border border-gray-200 rounded-lg p-4 shadow-sm hover:shadow-md transition-shadow duration-300">
                                <div class="flex justify-between items-start">
                                    <div class="flex-grow">
                                        <div class="text-gray-800 font-medium mb-2">
                                            <%= home.title %>
                                        </div>
                                        <div class="text-gray-600 text-sm mb-3">
                                            <%= home.description %>
                                        </div>
                                        <div class="grid grid-cols-2 gap-2 text-sm text-gray-500 mb-3">
                                            <div><strong>Price:</strong> $<%= home.price %>/night</div>
                                            <div><strong>Location:</strong> <%= home.location %></div>
                                            <div><strong>Bedrooms:</strong> <%= home.bedrooms %></div>
                                            <div><strong>Bathrooms:</strong> <%= home.bathrooms %></div>
                                            <div class="col-span-2"><strong>Amenities:</strong> <%= home.amenities %></div>
                                        </div>
                                    </div>
                                    <a href="/host/edit-home/<%= home.id %>/?editing=true" class="bg-blue-500 hover:bg-blue-600 text-white font-medium py-2 px-4 rounded-lg transition-colors duration-300 ml-4 flex-shrink-0">
                                        Edit
                                    </a>
                                    <a href="/host/delete-home/<%= home.id %>" class="bg-red-500 hover:bg-red-600 text-white font-medium py-2 px-4 rounded-lg transition-colors duration-300 ml-4 flex-shrink-0">
                                        Delete
                                    </a>
                                </div>
                            </li>
                        <% }) %>
                    </ul>
                </div>
            </main>
    </body>

    </html>