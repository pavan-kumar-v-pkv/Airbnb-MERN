<%- include('../partials/head') %>
  </head>
  <body>
    <%- include('../partials/nav') %>
    <main class="container mx-auto mt-8 p-8 bg-white rounded-lg shadow-md">
      <h1 class="text-3xl font-bold mb-6 text-center text-gray-800">Register as a new user</h1>

      <form action="/signup" method="POST" class="max-w-md mx-auto">
        <%- include('../partials/errors', { errors: errors }) %>
        <input
          type="text"
          name="firstName"
          value="<%= oldInput.firstName ? oldInput.firstName : '' %>"
          required
          placeholder="First Name"
          class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"/>
        <input
          type="text"
          name="lastName"
          value="<%= oldInput.lastName ? oldInput.lastName : '' %>"
          placeholder="Last Name"
          class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"/>
        <input
          type="email"
          name="email"
          value="<%= oldInput.email ? oldInput.email : '' %>"
          required
          placeholder="Email"
          class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"/>
        <input
          type="password"
          name="password"
          required
          placeholder="Password"
          class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"/>
        <input
          type="password"
          name="confirmPassword"
          required
          placeholder="Confirm Password"
          class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"/>

        <div class="mb-4">
          <p class="text-gray-700 font-medium mb-2">Select User Type:</p>
          <div class="flex space-x-6 mb-2">
            <label for="guest" class="flex items-center cursor-pointer">
              <input type="radio" name="userType" value="guest" id="guest" checked class="mr-2"/>
              <span class="text-gray-700">Guest</span>
            </label>
            <label for="host" class="flex items-center cursor-pointer">
              <input type="radio" name="userType" value="host" id="host" class="mr-2"/>
              <span class="text-gray-700">Host</span>
            </label>
          </div>
        </div>

        <div class="mb-6">
          <label for="terms" class="flex items-center cursor-pointer">
            <input type="checkbox" name="terms" id="terms" required class="mr-2"/>
            <span class="text-gray-700">I agree to the terms and conditions</span>
          </label>
        </div>

        <input type="submit" value="Register" class="w-full bg-red-500 text-white py-2 rounded-md hover:bg-red-600 transition duration-300" />
        
        <div class="mt-4 text-center">
          <p class="text-gray-600">Already have an account? 
            <a href="/login" class="text-red-500 hover:text-red-700 font-medium">Login here</a>
          </p>
        </div>
      </form>
    </main>
  </body>
</html>
