<header class="bg-red-500 text-white p-4 shadow-md sticky top-0 z-50">
  <div class="container mx-auto">
    <nav class="flex flex-wrap justify-between items-center">
      <!-- Logo/Brand -->
      <a href="/" class="flex items-center text-2xl font-bold mr-6">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-7 h-7 mr-2">
          <path d="M11.47 3.84a.75.75 0 011.06 0l8.69 8.69a.75.75 0 101.06-1.06l-8.689-8.69a2.25 2.25 0 00-3.182 0l-8.69 8.69a.75.75 0 001.061 1.06l8.69-8.69z" />
          <path d="M12 5.432l8.159 8.159c.03.03.06.058.091.086v6.198c0 1.035-.84 1.875-1.875 1.875H15a.75.75 0 01-.75-.75v-4.5a.75.75 0 00-.75-.75h-3a.75.75 0 00-.75.75V21a.75.75 0 01-.75.75H5.625a1.875 1.875 0 01-1.875-1.875v-6.198a2.29 2.29 0 00.091-.086L12 5.43z" />
        </svg>
        airbnb
      </a>

      <!-- Mobile menu button -->
      <div class="block lg:hidden">
        <button id="mobile-menu-button" class="flex items-center px-3 py-2 border rounded text-white border-white hover:text-white hover:border-white">
          <svg class="h-3 w-3 fill-current" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
            <title>Menu</title>
            <path d="M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z"/>
          </svg>
        </button>
      </div>

      <!-- Menu items -->
      <div id="menu" class="w-full flex-grow lg:flex lg:items-center lg:w-auto hidden">
        <ul class="lg:flex flex-1 items-center justify-end space-x-2">
          <% if (typeof isLoggedIn !== 'undefined' && isLoggedIn) { %>
            <% if (typeof user !== 'undefined' && user && user.userType === 'guest') { %>
            <li>
              <a href="/homes" 
                class="<%= currentPage === 'Home' ? 'bg-red-600' : 'hover:bg-red-600' %> block lg:inline-block py-2 px-4 rounded-lg transition duration-300">
                Homes
              </a>
            </li>
            <li>
              <a href="/favourites" 
                class="<%= currentPage === 'favourites' ? 'bg-red-600' : 'hover:bg-red-600' %> block lg:inline-block py-2 px-4 rounded-lg transition duration-300">
                Favourites
              </a>
            </li>
            <li>
              <a href="/bookings" 
                class="<%= currentPage === 'bookings' ? 'bg-red-600' : 'hover:bg-red-600' %> block lg:inline-block py-2 px-4 rounded-lg transition duration-300">
                Bookings
              </a>
            </li>
            <% } else if (typeof user !== 'undefined' && user && user.userType === 'host') { %>
            <li>
              <a href="/host/host-home-list" 
                class="<%= currentPage === 'host-homes' ? 'bg-red-600' : 'hover:bg-red-600' %> block lg:inline-block py-2 px-4 rounded-lg transition duration-300">
                Host Homes
              </a>
            </li>
              </a>
            </li>
            <li>
              <a href="/host/add-home" 
                class="<%= currentPage === 'addHome' ? 'bg-red-600' : 'hover:bg-red-600' %> block lg:inline-block py-2 px-4 rounded-lg transition duration-300">
                Add Home
              </a>
            </li>
            <% } %>
            <li class="ml-2">
              <form action="/logout" method="POST">
                <button type="submit" 
                  class="bg-white text-red-500 hover:bg-gray-100 font-semibold py-2 px-4 rounded-lg transition duration-300">
                  Logout
                </button>
              </form>
            </li>
          <% } else { %>
            <li>
              <a href="/signup" 
                class="<%= currentPage === 'signup' ? 'bg-red-600' : 'hover:bg-red-600' %> block lg:inline-block py-2 px-4 rounded-lg transition duration-300">
                Sign Up
              </a>
            </li>
            <li>
              <a href="/login" 
                class="<%= currentPage === 'login' ? 'bg-red-600' : 'bg-white' %> <%= currentPage === 'login' ? 'text-white' : 'text-red-500' %> hover:bg-gray-100 hover:text-red-500 font-semibold py-2 px-4 rounded-lg transition duration-300">
                Login
              </a>
            </li>
          <% } %>
        </ul>
      </div>
    </nav>
  </div>
</header>

<script>
  // Mobile menu toggle
  document.getElementById('mobile-menu-button').addEventListener('click', function() {
    const menu = document.getElementById('menu');
    menu.classList.toggle('hidden');
  });
</script>